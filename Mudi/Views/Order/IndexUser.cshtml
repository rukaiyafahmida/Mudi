@model Mudi_Models.ViewModels.OrderListVM

<hr />

<div class="container p-3 my-3">
    <h2 class="text-info">Your Orders</h2>
</div>

@if (@Model.OrderHList.Count() > 0)
{
    <div class="bg-white p-3">
        <ejs-grid id="Grid" dataSource="@Model.OrderHList" allowFiltering="true" allowSorting="true" allowPaging="true">
            <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
            <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
            <e-grid-columns>
                @*
                    <e-grid-column field="FullName" headerText="Name" textAlign="Right"></e-grid-column>

                    <e-grid-column field="Email" headerText="Email" textAlign="Right"></e-grid-column>
                    <e-grid-column field="PhoneNumber" headerText="Phone" textAlign="Right"></e-grid-column>*@
                <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>
                
                <e-grid-column field="FinalOrderTotal" headerText="Total Price" textAlign="Right"></e-grid-column>
                <e-grid-column field="OrderStatus" headerText="Status" textAlign="Right"></e-grid-column>
                <e-grid-column field="OrderDate" headerText="Order Date" customFormat="@(new { type = "date", format = "MM/dd/yyyy" })" textAlign="Right"></e-grid-column>
                <e-grid-column field="Id" headerText="" width="70"
                               template="<a rel='nofollow' href='DetailsUser/${Id}' class='btn btn-primary'> <i class='fas fa-list'></i><a>">

                </e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>

}

else
{
    <div class="container p-3 my-3">
        <p>
            No order done yet.
        </p>
    </div>
}

@*<div class="container p-3 my-3">
        <p>total orders :</p>
        <h2>@Model.OrderHList.Count() </h2>
    </div>*@

@section Scripts{
    <script>
        var count = 1;
        function querycellinfo(args) {

            if (args.column.headerText == "Row Numer") {
                args.cell.innerHTML = count;
                count++;
            }
        }
    </script>
}
