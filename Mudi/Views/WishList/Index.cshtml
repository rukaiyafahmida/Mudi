@model List<Mudi_Models.ViewModels.WishListVM>
<br />
<div class="border p-3 bg-white">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-info">Wish List </h2>
        </div>

    </div>

    @if (Model.Count>0)
    {

        <table id="tblData" class="table table-striped table-bordered pt-2" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Product Name</th>
                    <th>Unit Price</th>
                    <th>Stock Status</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>

                @foreach (var obj in Model)
                {

                    <tr>
                        <td width="33%">@obj.ProductName</td>
                        <td width="33%">@obj.UnitPrice</td>
                        @if (obj.Stock > 1)
                        {

                            <td width="33%">In Stock</td>
                        }
                        else
                        {
                            <td width="33%">Out Of Stock</td>
                        }
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Home" asp-route-Id="@obj.ProductId" asp-action="Details" class="btn btn-primary mx-2">
                                    <i class="fas fa-cart-plus"></i>
                                </a>
                                <a asp-controller="WishList" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    
    else
    {
        <p> No  item exists.</p>
    }
</div>
