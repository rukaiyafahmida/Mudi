@model List<Product>
@using Mudi_Utility
@if (Model.Count() > 0)
{


    <form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container row">
                <div class="col -8">
                    <div class="card mt-4">
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-6">
                                <i class="fa fa-shopping-cart"></i> &nbsp;
                                Shopping Cart
                            </div>
                            <div class="col-6 text-right">
                                <a asp-action="Clear" class="btn btn-outline-warning btn-sm">Clear Cart</a>
                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class=" d-none d-lg-block">
                                <div class="row" style="color:#821f3d">
                                    <div class="col-lg-2">
                                    </div>

                                    <div class="col-12 col-lg-3">
                                        Product Details
                                    </div>

                                    <div class="col-12 col-lg-2">
                                        Price per Unit
                                    </div>
                                    <div class="col-6 col-lg-2">
                                        Quantity
                                    </div>
                                    <div class="col-6 col-lg-2">
                                        Total Price
                                    </div>

                                    <div class="col-6 col-sm-4 col-lg-1">
                                    </div>
                                </div>
                            </div>

                            <hr />
                            @{
                                var orderTotal = 0.0;
                            }
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                <input hidden asp-for="@Model[i].Id" />
                                <div class="row h-100">
                                    <div class="col-4 col-md-2 text-center py-2">
                                        <img src="@WC.ImagePath@Model[i].Image" class="rounded" width="100%" />
                                    </div>

                                    <div class="col-8 col-lg-3">
                                        <h5>@Model[i].Name</h5>
                                        <div style="font-size:11px;">@Model[i].ShortDescription</div>
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;"> ৳ @Model[i].Price</span>/ @Model[i].Unit
                                        @*what to do with the unit*@

                                    </div>

                                    <div class="col-4 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <input type="text" asp-for="@Model[i].TempQty" class="form-control" />
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;"> ৳ @(Model[i].Price* Model[i].TempQty)</span>

                                    </div>

                                    <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                        <a asp-action="Remove" asp-route-id="@Model[i].Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                                orderTotal += Model[i].Price * Model[i].TempQty;
                                <hr />
                            }

                            <div class="row">
                                <div class="col-12 text-right pr-4" style="color:#821f3d">
                                    Order Total : ৳ @orderTotal
                                </div>
                            </div>

                        </div>
                        <div class="card-footer">
                            <div class="row">

                                <div class="col-6 col-md-3 offset-md-6">

                                    <input type="submit" onclick="return validateInput()" asp-action="UpdateCart" formmethod="post" name="Update" value="Update Cart"
                                           class="btn btn-info form-control" />

                                </div>
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-success form-control ">
                                        <span>Continue</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <p>Please add items to cart.</p>
}

